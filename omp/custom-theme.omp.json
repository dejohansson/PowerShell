{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 0,
      "type": "prompt",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "shell",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#00a2ff",
          "background": "#112738",
          "properties": {
            "postfix": " <#0a1721>|</>"
          }
        },
        {
          "background": "#112738",
          "foreground": "#ff9a00",
          "leading_diamond": "",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "prefix": " ",
            "style": "folder"
          },
          "style": "powerline",
          "trailing_diamond": "\uE0B0",
          "type": "path"
        },
        {
          "background": "#112738",
          "foreground": "#48ff00",
          "leading_diamond": "",
          "trailing_diamond": "\uE0B0",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "prefix": "<#0a1721>\ue0b1  </>",
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }}"
          },
          "style": "powerline",
          "type": "git"
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#fffb00",
          "background": "#112738",
          "properties": {
            "prefix": "<#0a1721>\ue0b1 </>",
            "root_icon": "\uF0E7"
          }
        }
      ]
    }
  ],
  "final_space": true
}
